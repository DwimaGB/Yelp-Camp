<h1>Edit Campground</h1>

<form action="/campgrounds/<%= campground.id %>?_method=PUT"  method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
    <%- include('./_form_fields.ejs') %>

    <div class="mb-3">
        <% campground.images.forEach((img, i)=>{ %>
            <div class="form-check-inline">
                <label for="image-<%= i %>">Delete</label>
                <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
            </div>
            <img src="<%= img.thumbnail %>" class="img-thumbnail">
            
        <% }) %>
    </div>

    <div class="mb-5">
        <a class="btn btn-danger" href="/campgrounds/<%= campground.id %>">Cancel</a>
        <button class="btn btn-success">Save</button>
    </div>
    
</form>